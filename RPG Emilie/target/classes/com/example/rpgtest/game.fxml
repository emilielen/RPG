<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rpgtest.Controllers.GameController">
   <children>
      <ImageView fitHeight="401.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/background.png" />
         </image>
      </ImageView>
      <ProgressBar fx:id="HeroHealthBar" layoutX="88.0" layoutY="118.0" prefHeight="18.0" prefWidth="120.0" progress="1.0" />
      <ProgressBar fx:id="EnemyHealthBar" layoutX="393.0" layoutY="118.0" prefHeight="18.0" prefWidth="120.0" progress="1.0" />
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="378.0" layoutY="145.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/mage.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="73.0" layoutY="152.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/traveler.png" />
         </image>
      </ImageView>
      <Button fx:id="FightButton" layoutX="148.0" layoutY="335.0" mnemonicParsing="false" onAction="#Fight" text="Fight" textAlignment="CENTER">
         <font>
            <Font name="Book Antiqua" size="16.0" />
         </font>
      </Button>
      <Label fx:id="StoryLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="58.0" layoutY="30.0" prefHeight="65.0" prefWidth="484.0" text="Here starts your journey... " textFill="WHITE">
         <font>
            <Font name="Book Antiqua" size="18.0" />
         </font>
      </Label>
      <Button fx:id="EatButton" layoutX="232.0" layoutY="335.0" mnemonicParsing="false" onAction="#Eat" text="Eat" textAlignment="CENTER">
         <font>
            <Font name="Book Antiqua" size="16.0" />
         </font>
      </Button>
      <Button fx:id="PotionButton" layoutX="293.0" layoutY="335.0" mnemonicParsing="false" onAction="#UsePotion" text="Use Potion" textAlignment="CENTER">
         <font>
            <Font name="Book Antiqua" size="16.0" />
         </font>
      </Button>
      <Button fx:id="FleeButton" layoutX="409.0" layoutY="335.0" mnemonicParsing="false" onAction="#Flee" text="Flee" textAlignment="CENTER">
         <font>
            <Font name="Book Antiqua" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
